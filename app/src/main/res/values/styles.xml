<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrayBottomBar</item>
        <item name="colorPrimaryDark">@color/colorGrayBottomBar</item>
        <item name="colorAccent">@color/colorBlueBottomBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>


    <style name="MY.DIALOG" parent="android:Theme" >
        <!-- <item name="searchViewStyle">@style/AppTheme.SearchView</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:minWidth">70.0dip</item>
        <item name="android:minHeight">33.0dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>

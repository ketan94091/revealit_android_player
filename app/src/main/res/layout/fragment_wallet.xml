<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <RelativeLayout
            android:id="@+id/relativeAccountDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/round_corner_wallet_scree"
           android:visibility="gone"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="13dp">

                    <ImageView
                        android:id="@+id/imgRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/refresh"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/titleAcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/strAccount"
                        android:textAllCaps="true"
                        android:textSize="13dp"
                        android:textColor="@color/colorWalletText"/>

                    <TextView
                        android:id="@+id/txtAccountName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleAcount"
                        android:capitalize="characters"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorCurrency"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWalletBorder" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="13dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorAmountAndSymbol"/>


                            <TextView
                                android:id="@+id/titleAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtAmount"
                                android:text="@string/strBalance"
                                android:textSize="13dp"
                                android:textAllCaps="true"
                                android:textColor="@color/colorWalletText"
                              />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtCurrncyType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="USD"
                                android:textAllCaps="true"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorCurrency"/>


                            <TextView
                                android:id="@+id/titleCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtAmount"
                                android:text="@string/strCurrency"
                                android:textSize="13dp"
                                android:textAllCaps="true"
                                android:textColor="@color/colorWalletText"
                                 />

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearRewardHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/relativeAccountDetails"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/titleSummery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAmount"
                android:text="@string/strRewardHistory"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textColor="@color/colorWalletText"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtAmount"
                    android:text="@string/strType"
                    android:textSize="13dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWalletText"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtAmount"
                    android:text="@string/strAmount"
                    android:textSize="13dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWalletText"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtAmount"
                    android:text="@string/strWhen"
                    android:textSize="13dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWalletText"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleRewardHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
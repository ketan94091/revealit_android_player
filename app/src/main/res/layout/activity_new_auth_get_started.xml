<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".UserOnboardingProcess.NewAuthGetStartedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bilo_bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="700"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/strWelcomeToRevealitTV" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
               >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/app_icon_banner" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quasimoda_bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="700"
                    android:background="@drawable/new_auth_round_button"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/strLogin"
                    android:layout_marginRight="10dp"/>


                <TextView
                    android:id="@+id/txtSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quasimoda_bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textFontWeight="700"
                    android:background="@drawable/new_auth_round_button_app_green"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/strSignUp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
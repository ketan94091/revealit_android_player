<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgCloseDailoge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@mipmap/cross" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCloseDailoge"
            android:layout_margin="10dp"
            android:text="@string/strSelectEndPoint"
            android:textColor="@color/colorGrayBottomBar"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle">
        <LinearLayout
            android:id="@+id/relativeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/linearBetacurator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtBetaCuratorMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/strBeta"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtBetaCuratorRegistration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/strBetaURL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="500"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearStaging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtStagingMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgCloseDailoge"
                    android:layout_weight="2"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/strStaging"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtStagingRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/strStagingURL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="500"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearTesting1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtTesting1Mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/strTesting1"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtTesting1Registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/strTesting1URL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="500"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearTesting2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtTesting2Mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/strTesting2"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtTesting2Registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/strTesting2URL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="500"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearTesting3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtTesting3Mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/strTesting3"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtTesting3Registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/strTesting3URL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="500"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearIntegration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtIntegrationMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/strIntegration"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtIntegrationRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/strIntegrationURL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="500"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtDemoMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/strDemo"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtDemoRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/strDemoURL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="500"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearMobileDevTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtMobileDevTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/strAndroidMobile1"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtMobileDevTwoRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/strAndroidMobile1URL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWalletText"
                    android:textFontWeight="500"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollContent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSimulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="@string/strSimulation"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchModeOfApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:thumb="@drawable/thumb_selector"
                app:track="@drawable/track_selector" />

            <TextView
                android:id="@+id/txtLive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/strLive"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

        </LinearLayout>


    </RelativeLayout>





</RelativeLayout>
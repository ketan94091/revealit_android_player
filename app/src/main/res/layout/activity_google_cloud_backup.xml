<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".UserOnboardingProcess.NewAuthGetStartedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bilo_bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="700"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/strCloudBackups"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="start"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="600"
                    android:textSize="14dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/strCloudOne" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="start"
                    android:textColor="@color/colorCuratorRedError"
                    android:textFontWeight="600"
                    android:textSize="14dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/strCloudTwo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="600"
                    android:textSize="14dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/strCloudThree" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txtBackuplater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="600"
                    android:background="@drawable/new_auth_round_button"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/strBackUpLater"
                    android:layout_marginRight="10dp"/>


                <TextView
                    android:id="@+id/txtBackupNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textFontWeight="600"
                    android:background="@drawable/new_auth_round_button_app_green"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/strBackUpNow"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgGoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@mipmap/cross" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:padding="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/logo_shopping"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/strVerifyEmail"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                   />


                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/colorGrayBottomBar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/strThankyouforSigningUp"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/strThankyouforSigningUpTitle"
                    android:textAlignment="center"
                    android:textColor="@color/colorGrayLight"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearVerifycode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearNext"
                android:layout_marginBottom="100dp"
                android:padding="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/edtOTPone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="3dp"
                    android:textColor="@color/colorButtonEnabled"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="@drawable/square_border_otp_green"/>

                <EditText
                    android:id="@+id/edtOTPTwo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="3dp"
                    android:textColor="@color/colorButtonEnabled"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="@drawable/square_border_otp_green"/>

                <EditText
                    android:id="@+id/edtOTPThree"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorButtonEnabled"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="@drawable/square_border_otp_green"/>

                <EditText
                    android:id="@+id/edtOTPFour"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="3dp"
                    android:textColor="@color/colorButtonEnabled"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="@drawable/square_border_otp_green"/>

                <EditText
                    android:id="@+id/edtOTPFive"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="3dp"
                    android:textColor="@color/colorButtonEnabled"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="@drawable/square_border_otp_green"/>

                <EditText
                    android:id="@+id/edtOTPSix"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="3dp"
                    android:textColor="@color/colorButtonEnabled"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="@drawable/square_border_otp_green"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtNextDisabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strNext"
                    android:background="@drawable/round_corner_disabled_registration"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:padding="10dp"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/txtNextEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strNext"
                    android:background="@drawable/round_corner_enabled_registration"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:visibility="gone"

                    />

            </LinearLayout>

        </RelativeLayout>

</LinearLayout>
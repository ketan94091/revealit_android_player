<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgGoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@mipmap/cross" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:padding="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/logo_shopping" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/strVerifyEmail"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/colorGrayBottomBar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/strThankyouforSigningUp"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/strThankyouforSigningUpTitle"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorGrayLight"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearVerifycode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearNext"
                android:layout_marginBottom="50dp"
                android:gravity="center_horizontal">


                <EditText
                    android:id="@+id/edtOTPone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="20dp"
                    android:textColor="@color/colorGrayBottomBar"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtOTPTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="20dp"
                    android:textColor="@color/colorGrayBottomBar"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtOTPThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="20dp"
                    android:textColor="@color/colorGrayBottomBar"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtOTPFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="20dp"
                    android:textColor="@color/colorGrayBottomBar"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtOTPFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="20dp"
                    android:textColor="@color/colorGrayBottomBar"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtOTPSix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="20dp"
                    android:textColor="@color/colorGrayBottomBar"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtNextDisabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_border_disabled"
                    android:padding="10dp"
                    android:text="@string/strNext"
                    android:textAlignment="center"
                    android:textColor="@color/colorGrayLight"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txtNextEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_border"
                    android:padding="10dp"
                    android:text="@string/strNext"
                    android:textAlignment="center"
                    android:textColor="@color/colorGrayBottomBar"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

</LinearLayout>
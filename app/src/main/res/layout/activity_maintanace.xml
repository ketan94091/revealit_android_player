<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MaintanaceActivity"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/app_icon_round" />

            <LinearLayout
                android:id="@+id/maintanance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgLogo"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="vertical"
                android:paddingTop="50dp"
                android:paddingBottom="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    android:src="@mipmap/maintanance" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maintanance"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="@string/strAppIsInMaintenace"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textFontWeight="700"
                android:textSize="16dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/dmsans_medium"
                android:text="@string/strAppIsInMaintenaceMsg"
                android:textColor="@color/colorBlack"
                android:textFontWeight="500"
                android:textSize="14dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/txtReload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/new_auth_round_button_app_green"
                android:fontFamily="@font/dmsans_bold"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="@string/strReload"
                android:textColor="@color/colorWhite"
                android:textFontWeight="700"
                android:textSize="15dp" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
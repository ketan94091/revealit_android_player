<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="20dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >

            <RelativeLayout
                android:id="@+id/relativeBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBackArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_cross" />


                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bilo_bold"
                    android:gravity="center_vertical"
                    android:text="@string/strAuthorisation"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="700"
                    android:textSize="15dp" />


            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >


    <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
                android:background="@drawable/border_ovel_blue" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgProfile"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quasimoda_semibold"
                android:text="Ketan patel"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textFontWeight="600"
                android:visibility="gone"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/txtProtonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtUserName"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quasimoda_semibold"
                android:text="KetsPatel"
                android:textAlignment="center"
                android:textColor="@color/colorBottomBarActiveGrey"
                android:textFontWeight="600"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/LinearNotificationMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProtonName"
                android:layout_marginTop="30dp"
                android:background="@drawable/new_auth_round_button"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtNotificationMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bilo_bold"
                    android:textColor="@color/colorBlack"
                    android:textFontWeight="700"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearWarningMsgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearNotificationMsg"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtWarningMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icn_warining"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/quasimoda_semibold"
                    android:text="@string/strAuthWarningMsg"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorCuratorRedError"
                    android:textFontWeight="600"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txtWarningMsgTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quasimoda_semibold"
                    android:paddingLeft="20dp"
                    android:text="@string/strAuthWarningMsgTwo"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorCuratorRedError"
                    android:textFontWeight="600"
                    android:textSize="12dp" />



            </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAuthorise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_auth_round_button_app_green"
            android:fontFamily="@font/quasimoda_bold"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/strAuthorise"
            android:textColor="@color/colorWhite"
            android:textFontWeight="700"
            android:textSize="15dp" />
      </LinearLayout>
    </LinearLayout>
</RelativeLayout>








